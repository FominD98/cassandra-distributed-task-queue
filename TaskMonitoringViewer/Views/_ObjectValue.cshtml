@using SKBKontur.Catalogue.RemoteTaskQueue.TaskMonitoringViewer.Models
@model ObjectTaskDataModel
<table class="remoteTaskQueueMonitoring__object">
    @{
        foreach(var property in Model.Properties)
        {
            var rowClass = "";
            var canHideClass = "";
            if(property.Value is ObjectTaskDataModel)
            {
                canHideClass = "canHide";
                rowClass = property.Hidden ? "hideValue" : "";
            }
            <tr class="remoteTaskQueueMonitoring__property @canHideClass @rowClass">
                <td class="remoteTaskQueueMonitoring__property__name">@property.Name</td>
                <td class="remoteTaskQueueMonitoring__property__value">@property.Value.Render(Html)</td>
                <td class="propertyHiddenValue"><i>Значение скрыто</i></td>
            </tr>
        }
    }
</table>