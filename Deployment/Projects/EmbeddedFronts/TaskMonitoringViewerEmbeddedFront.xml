<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="..\..\Projects\Common.vars" Condition="$(CommonVarsImported) == ''" />
  <Import Project="$(CatalogueRootDirectory)\MsBuild\DeployTargets\Targets\EmbeddedFront.targets"/>

  <PropertyGroup>
    <TargetFrontPath>$(CatalogueRootDirectory)\RemoteTaskQueue\TaskMonitoringViewer</TargetFrontPath>
    <FrontName>TaskMonitoringViewer</FrontName>

    <VirtualStaticContentOutput>Shared/</VirtualStaticContentOutput>
    <PhysicalStaticContentOutput>$(CatalogueRootDirectory)\WebWorms\Web\Statics</PhysicalStaticContentOutput>
  </PropertyGroup>

  <ItemGroup>

    <ResourcesHostPage Include="$(CatalogueRootDirectory)\RemoteTaskQueue\TaskMonitoringViewer\**\*.cshtml" />

    <SharedResources Include="Shared">
      <VirtualName>Shared/</VirtualName>
      <PhysicalPath>$(CatalogueRootDirectory)\WebWorms\Web\Statics</PhysicalPath>
    </SharedResources>
    <SharedResources Include="SharedBlocks">
      <VirtualName>SharedBlocks/</VirtualName>
      <PhysicalPath>$(CatalogueRootDirectory)\WebWorms\Web\Blocks</PhysicalPath>
    </SharedResources>

  </ItemGroup>

</Project>