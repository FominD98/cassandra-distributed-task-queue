<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="..\Common.vars" Condition="$(CommonVarsImported) == ''" />

  <ItemGroup>
    <WebSite Include="/">
      <PhysicalPath>$([System.IO.Path]::GetFullPath('$(CatalogueRootDirectory)\RemoteTaskQueue\.screenshots\'))</PhysicalPath>
      <HttpPort>6669</HttpPort>
      <AppName>RemoteTaskQueue.Screenshots</AppName>
      <AppPool>RemoteTaskQueue.Screenshots_Pool</AppPool>
      <AppRootDirectory>$(CatalogueRootDirectory)\RemoteTaskQueue\.screenshots\</AppRootDirectory>
    </WebSite>
  </ItemGroup>

  <Target Name="DeployScreenshots">
    <CallTarget Targets="RecreateWebSite" />
  </Target>

  <Import Project="..\..\..\..\MSBuild\DeployTargets\Targets\IISWebSite.targets" />
  
</Project>
