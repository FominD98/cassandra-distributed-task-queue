  <Import Project="..\Configuration\ServiceSuites.xml" />
  <Import Project="..\Configuration\FrontEndSuites.xml" />
  
  <ItemGroup>
    <NUnitAssemblies Include="$(TestSolutionDir)\MonitoringTests\bin\$(BuildConfiguration)\Catalogue.RemoteTaskQueue.MonitoringTests.dll"></NUnitAssemblies>
    <NUnitAssemblies Include="$(TestSolutionDir)\FunctionalTests\bin\$(BuildConfiguration)\RemoteTaskQueue.FunctionalTests.dll"></NUnitAssemblies>
