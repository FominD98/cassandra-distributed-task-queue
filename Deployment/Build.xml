<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="Projects\Common.vars" Condition="$(CommonVarsImported) == ''" />
  
  <PropertyGroup>
    <TempStoragePath>RemoteTaskQueue\TempStorage</TempStoragePath>
    <NodeJsPath Condition="'$(NodeJsPath)' == ''">C:\Program Files\nodejs\</NodeJsPath>
  </PropertyGroup>

  <ItemGroup>
    <Solution Include="XmlSerializer\XmlSerializer.sln"></Solution>
    <Solution Include="Core\Core.sln"></Solution>
    <Solution Include="WebWorms\WebWorms.sln"></Solution>  
    <Solution Include="RemoteTaskQueue\RemoteTaskQueue.sln"></Solution>
  </ItemGroup>
  <Import Project="$(CatalogueRootDirectory)\MSBuild\DeployTargets\Targets\Build.targets" />

  <Target Name="BuildScripts" BeforeTargets="Build">
    <Exec Command='mkdir %AppData%\npm' IgnoreExitCode='true'/>
    <Exec WorkingDirectory="$(CatalogueRootDirectory)\RemoteTaskQueue\Front\" Command='"$(NodeJsPath)npm" install --production' Condition="('$(BuildMode)'=='Full') And Exists('$(CatalogueRootDirectory)\RemoteTaskQueue\Front\package.json') "/>
    <Exec WorkingDirectory="$(CatalogueRootDirectory)\RemoteTaskQueue\Front\" Command='"$(NodeJsPath)npm" update --production' Condition="('$(BuildMode)'=='Full') And Exists('$(CatalogueRootDirectory)\RemoteTaskQueue\Front\package.json') "/>
    <Exec WorkingDirectory="$(CatalogueRootDirectory)\RemoteTaskQueue\Front\" Command='"$(NodeJsPath)npm" run preparescripts' Condition="('$(BuildMode)'=='Full') And Exists('$(CatalogueRootDirectory)\RemoteTaskQueue\Front\package.json')" />
    <Exec Command='$(CatalogueRootDirectory)\Build\robormdir.bat node_modules' WorkingDirectory="$(CatalogueRootDirectory)\RemoteTaskQueue\Front\" />

  </Target>

</Project>