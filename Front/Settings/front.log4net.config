<?xml version="1.0" encoding="utf-8"?>
<log4net>
  <appender name="CatalogueAppender" type="log4net.Appender.FileAppender">
    <file type="log4net.Util.PatternString" value="%property{LogDirectory}\FrontLog.%date{yyyy.MM.dd.HH.mm.ss.fff}.log" />
    <layout type="log4net.Layout.PatternLayout" value="%date{yyyy-MM-dd HH:mm:ss.fff} %-5level %message%newline" />
    <appendToFile value="true" />
  </appender>
  <root>
    <level value="INFO"/>
    <appender-ref ref="CatalogueAppender" />
    <appender-ref ref="CatalogueGlobalErrorsAppender" />
  </root>
  <appender name="CatalogueGlobalErrorsAppender" type="log4net.Appender.FileAppender">
    <file type="log4net.Util.PatternString" value="%property{LogDirectory}\GlobalLog.%date{yyyy.MM.dd.HH.mm.ss.fff}.log" />
    <layout type="log4net.Layout.PatternLayout" value="%date{yyyy-MM-dd HH:mm:ss.fff} %-5level %message%newline" />
    <appendToFile value="true" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="ERROR" />
      <levelMax value="FATAL" />
    </filter>
  </appender>
  <logger name="GlobalErrorsLog" additivity="false">
    <level value="INFO" />
    <appender-ref ref="CatalogueGlobalErrorsAppender" />
  </logger>
</log4net>